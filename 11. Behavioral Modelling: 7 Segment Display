module hexto7segment (
  input [3:0] X,
  output reg [6:0] z
);

always @(*)
  case (X)
    4'b0000 : z = 7'b1111110; //Hexadecimal 0 
    4'b0001 : z = 7'b0010000; //1
    4'b0010 : z = 7'b1101101; //2
    4'b0011 : z = 7'b1101101; //3
    4'b0100 : z = 7'b0110011; //4
    4'b0101 : z = 7'b1011011; //5
    4'b0110 : z = 7'b1011111; //6
    4'b0111 : z = 7'b1110000; //7
    4'b1000 : z = 7'b1111111; //8
    4'b1001 : z = 7'b1111011; //9
    4'b1010 : z = 7'b1110111; //A
    4'b1011 : z = 7'b0011111; //B
    4'b1100 : z = 7'b1001110; //C 
    4'b1101 : z = 7'b0111101; //D
    4'b1110 : z = 7'b1001111; //E
    4'b1111 : z = 7'b1000111; //F
    default : z = 7'b0000000;
  endcase

endmodule
